{% extends '::base.html.twig' %}

{% block stylesheets %}        
    <link href="{{ asset(global.directorio_css ~ "bootstrap.css")}}" rel="stylesheet">
    <link href="{{ asset(global.directorio_css ~ "jumbotron.css")}}" rel="stylesheet">    
    <link href="{{ asset(global.directorio_css ~ "social-buttons.css")}}" rel="stylesheet">         
{% endblock %}

{% block javascripts %}    
  <script src="http://code.jquery.com/jquery.js"></script>
  <script src="{{ asset(global.directorio_js ~ "bootstrap.min.js")}}"></script>       
{% endblock %}

{% block menu %}
  {#<div class="hidden-lg">#}
  
  <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{ path('frontend_homepage', { '_locale': lenguaje }) }}">
            <img class="hidden-lg  img-responsive" src="{{ asset(global.directorio_img ~ "logo_small.png")}}" alt="" >
            <img class="visible-lg img-responsive" src="{{ asset(global.directorio_img ~ "logo.png")}}" alt="" >
          </a>          
        </div>
        <div class="navbar-collapse collapse">                           
          
          <form class="navbar-form navbar-right">                                      
            <div class="btn-group">
              <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                <span class="glyphicon glyphicon-flag"></span> {{ 'Idioma'|trans({},lenguaje) }}<span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                {% block comboidioma %}{% endblock %}                 
              </ul>
            </div>                    
          </form>
                  
          <form class="navbar-form navbar-right">                                   
            <div>
              <a href="{{ path('usuario_login', { '_locale': lenguaje }) }}" class="btn btn-login btn-sm" ><span class="glyphicon glyphicon-user"></span> Acceso Usuario</a>
              <a href="{{ path('comercio_login', { '_locale': lenguaje }) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-bookmark"></span> Acceso Comercio</a>
            </div>                  
          </form>

          <form class="visible-xs navbar-form navbar-right">
            <div>
              <a href="{{ path('usuario_registro', { '_locale': lenguaje }) }}" class="btn btn-login btn-sm" ><span class="glyphicon glyphicon-user"></span> Registrar Usuario</a>
              <a href="{{ path('comercio_registro', { '_locale': lenguaje }) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-bookmark"></span> Registrar Usuario</a>
            </div>          
          </form>  

          {% block option_register %}{% endblock %}

          {% block form_login %}{% endblock %}

        </div><!--/.navbar-collapse -->
      </div>
    </div>

    {#</div>#}
{% endblock %}        

{% block body %}
        
    {% block jumbotron %}{% endblock %}                 
    <div class="container">    
      {% block contenido %}{% endblock %}      
    </div>   
    <hr>
    <footer>        
      <div class="col-lg-12">
        <div itemscope itemtype="http://schema.org/Organization">        
          <span itemprop="name"><strong>{{ global.name_web }}</strong></span> &copy; Company 2013<br>            
        </div>  
      </div>            
    </footer>

  </div><!--/.container-->
{% endblock %}